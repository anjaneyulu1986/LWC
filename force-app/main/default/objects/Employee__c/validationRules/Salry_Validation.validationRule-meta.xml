<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Salry_Validation</fullName>
    <active>true</active>
    <errorConditionFormula>AND( RecordType.Name == &quot;Permanent&quot;, Salary__c &lt;10000)</errorConditionFormula>
    <errorMessage>Permanent employees should have the salary &gt;10000</errorMessage>
</ValidationRule>
